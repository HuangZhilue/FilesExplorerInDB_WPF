<Window x:Class="FilesExplorerInDB_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesExplorerInDB_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="主页">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="系统设置" HorizontalContentAlignment="Center" Grid.Column="2" />
                    <Button x:Name="Button_Setting" Content="设置" Grid.Column="2" Margin="5,20,5.4,4.8" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Setting_Click"/>
                    <GroupBox Grid.Column="1" Header="刷新" HorizontalContentAlignment="Center"/>
                    <Button x:Name="Button_Refresh" Content="刷新" Grid.Column="1" Margin="5,20,5.4,4.8" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Refresh_Click"/>

                </Grid>
            </TabItem>
            <TabItem Header="查看">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Button_PathBack" Content="＜" Click="Button_PathBack_Click"/>
            <Button x:Name="Button_PathNext" Grid.Column="1" Content="＞" Click="Button_PathNext_Click"/>
            <Button x:Name="Button_PathPrevious" Grid.Column="2" Content="∧" Click="Button_PathPrevious_Click"/>
            <TextBox x:Name="TextBox_Path" Grid.Column="3" Margin="10,0" TextWrapping="Wrap" Text="路径"/>
            <TextBox x:Name="TextBox_Search" Grid.Column="4" Height="20" TextWrapping="Wrap" Text="" Margin="0,0,30,0"/>
            <Button x:Name="Button_Cancel" Grid.Column="4" Content="X" Width="20" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="205"/>
            </Grid.ColumnDefinitions>
            <TreeView x:Name="TreeView_Explorer" VerticalContentAlignment="Top" MouseDoubleClick="TreeView_Explorer_MouseDoubleClick">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding FolderNodes}">
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" FontSize="14" Text="{Binding FolderName}" Margin="2,0,0,0"></TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Grid x:Name="Grid_ListView_Explorer" Grid.Column="1">
                <ListView x:Name="ListView_Explorer" VerticalContentAlignment="Center" MouseLeftButtonDown="ListView_Explorer_MouseLeftButtonDown" MouseRightButtonDown="ListView_Explorer_MouseRightButtonDown" AllowDrop="True" DragEnter="ListView_Explorer_DragEnter" Drop="ListView_Explorer_Drop">
                    <!--SelectionChanged="ListView_Explorer_SelectionChanged"-->
                    <ListView.View>
                        <GridView>
                            <GridViewColumn>
                                <!--DisplayMemberBinding="{Binding Name}"-->
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image x:Name="Image_Type" Source="{Binding ImageSource}" Height="30"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="名称">
                                <!--DisplayMemberBinding="{Binding Name}"-->
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="nameTextBox" Text="{Binding Name}" BorderThickness="0" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Arrow" Focusable="False" PreviewKeyDown="NameTextBox_PreviewKeyDown" LostFocus="NameTextBox_LostFocus" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="类型" DisplayMemberBinding="{Binding Type}"/>
                            <GridViewColumn Header="大小" DisplayMemberBinding="{Binding Size}"/>
                            <GridViewColumn Header="创建时间" DisplayMemberBinding="{Binding CreationTime}"/>
                            <GridViewColumn Header="修改时间" DisplayMemberBinding="{Binding ModifyTime}"/>
                            <GridViewColumn Header="访问时间" DisplayMemberBinding="{Binding AccessTime}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <!--<Grid x:Name="Grid_ScrollViewer_Explorer" Grid.Column="1">
                <ScrollViewer>
                    <WrapPanel x:Name="WrapPanel_Explorer">
                        <Grid Height="150" Width="120" Margin="10">
                            <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,-5" VerticalAlignment="Top" Width="100"/>
                            <TextBox Margin="0,115,0,12" Text="TextBoxTextBoxTextBoxTextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" IsReadOnly="True" TextWrapping="WrapWithOverflow" BorderThickness="0"/>
                            <TextBox Text="Size" IsReadOnly="True" Visibility="Hidden"/>
                            <TextBox Text="Type" IsReadOnly="True" Visibility="Hidden"/>
                            <TextBox Text="CreateTime" IsReadOnly="True" Visibility="Hidden"/>
                            <TextBox Text="ModifyTime" IsReadOnly="True" Visibility="Hidden"/>
                            <RadioButton Content="" GroupName="FGroup" Checked="RadioButton_Checked" IsChecked="True" Unchecked="RadioButton_Unchecked"/>
                        </Grid>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>-->
            <TextBox x:Name="Label_Name" Text="Name" Grid.Column="2" Margin="10,10,10,0" VerticalAlignment="Top" Height="25" FontSize="15" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="Label_Type" Text="Type" Grid.Column="2" Margin="10,35,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <Border BorderBrush="#7F7C7C7C" BorderThickness="1" Grid.Column="2" HorizontalAlignment="Left" Height="60" Margin="10,60,0,0" VerticalAlignment="Top" Width="60">
                <Image x:Name="Image_PropertyType"/>
            </Border>
            <TextBox x:Name="Label_Other_1" Text="Label" Grid.Column="2" Margin="10,125,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="Label_Other_2" Text="Label" Grid.Column="2" Margin="10,145,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="Label_Other_3" Text="Label" Grid.Column="2" Margin="10,165,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="Label_Other_4" Text="Label" Grid.Column="2" Margin="10,185,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="Label_Other_5" Text="Label" Grid.Column="2" Margin="10,205,10,0" VerticalAlignment="Top" Height="20" VerticalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
        </Grid>
        <Border BorderThickness="1" Grid.Row="3" Background="#FF74E6FF" BorderBrush="#FF74E6FF"/>



    </Grid>
</Window>
